{
  "compilerOptions": {
    "module": "esnext",                         // 모듈 코드 생성 방식 설정
    "strict": true,                               // 엄격한 타입 체크 활성화
    "esModuleInterop": true,                      // CommonJS 모듈과 ES 모듈의 상호 운용성 허용
    "forceConsistentCasingInFileNames": true,     // 파일 이름의 일관된 케이싱 강제
    "moduleResolution": "node",                  // 모듈 해석 방식 설정
    "resolveJsonModule": true,                    // JSON 파일을 모듈로 해석할지 여부 설정
    "isolatedModules": true,                      // 각 파일을 별개의 모듈로 처리할지 여부 설정
    "strictNullChecks": true,                     // null 및 undefined에 대한 엄격한 체크 설정
    "noImplicitAny": true,                        // 암시적인 any 타입 사용 방지
    "noUnusedLocals": true,                       // 사용되지 않는 지역 변수 검사 설정
    "noUnusedParameters": true,                   // 사용되지 않는 함수 매개변수 검사 설정
    "noImplicitReturns": true,                    // 함수가 값을 반환하지 않을 경우 경고 설정
    "noFallthroughCasesInSwitch": true,           // switch문에서 case 절에 break가 없을 경우 경고 설정
    "strictFunctionTypes": true,                    // 함수 타입의 매개변수 공변성 체크 활성화
    "target": "es6", // 컴파일된 코드의 ECMAScript 버전 설정
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["ES6", "DOM", "dom.iterable", "esnext"],
    "baseUrl": "./",
    // "paths": {
    //   "@core/*": ["src/core/*"],
    //   "@user/*": ["packages/user/src/*"],
    //   "@admin/*": ["packages/admin/src/*"]
    // },
  },
  "include": ["src", "src/**/*.d.ts"]
}